<% content_for(:title, t('.title')) %>
<div class="review-show-container">
  <h3><%= t('.title') %></h3>
  <div class="review-show-wrapper">
    <div class="review-show">
      <div class="d-flex justify-content-between">
        <h4 class="review-title"><%= simple_format(@review.title) %></h4>
        <div><%= l @review.created_at, format: :long %></div>
      </div>
      <div>
        <%= image_tag(@review.image.present? ? @review.image.url : 'sample.png', alt: "sample", height: "150px", class: "review-image") %>
      </div>
      <div class="review-body">
        <%= simple_format(@review.body) %>
      </div>
    </div>
  </div>
  <div class="review-btn-wrapper mt-3">
    <% if @review.user&.own?(@current_user) %>
    <div class="review-btns">
      <div class="review-edit">
        <%= link_to "編集", edit_review_path(@review), class: "edit-review-#{@review.id} btn btn-success" %>
      </div>
      <div class="review-delete">
        <%= link_to "削除", review_path(@review), class: "delete-review-#{@review.id} btn btn-success", data: {turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm')} %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="back-reviews-wrapper">
      <%= link_to "レビュー一覧へ", facility_reviews_path(@review.facility),class: "back-reviews-btn" %>
  </div>
</div>
