<div class="row mb-3" id="comment-form">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with(model: @review, url: @review.new_record? ? ( @facility ? facility_reviews_path(@facility) : event_reviews_path(@event) ) : (@review.reviewable_type == 'Facility' ? facility_review_path(@review.reviewable, @review) : event_review_path(@review.reviewable, @review))) do |f| %>
      <%= f.label :title %>
      <%= f.text_area :title, class: "form-control" %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control mb-3", row: "10", style: "height: 200px", placeholder: Review.human_attribute_name(:body) %>
      <%= f.submit t("defaults.post"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>