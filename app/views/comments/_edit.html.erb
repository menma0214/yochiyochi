<div data-comment-target="form" class="hidden">
  <%= form_with(model: comment,  data: { turbo_frame: "comment_#{comment.id}" }) do |f| %>
    <div>
      <%= f.text_area :body, class: "form-control mb-3" %>
    </div>
    <div>
      <%= f.submit t("defaults.post"), class: "btn btn-primary" %>
      <%= link_to 'キャンセル', '#', data: { action: "comment#cancel" }, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>