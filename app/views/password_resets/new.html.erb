<%= content_for(:title, t('.title')) %>
<div class="reset_password-container container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <p><%= t('.decription') %></p>
      <%= form_with url: password_resets_path, local: true do |f| %>
        <div class="form-group mt-5">
          <%= f.label :email, User.human_attribute_name(:email) %><br />
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <%= f.submit t('password_resets.new.submit'),class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>