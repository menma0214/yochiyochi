<%= turbo_stream.replace "unbookmark-button-for-#{bookmarkable_type.downcase}-#{bookmarkable_id}" do %>
  <% if bookmarkable_type == 'Facility' %>
    <%= render 'facilities/bookmark', facility: @bookmark.bookmarkable %>
  <% elsif bookmarkable_type == 'Event' %>
    <%= render 'events/bookmark', event: @bookmark.bookmarkable %>
  <% end %>
<% end %>