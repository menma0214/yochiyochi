<% content_for(:title, t('.title')) %>
<div>
  <div class="container">
    <h1></h1>
    <div class="row">
      <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1><%= t('.title', user_name: current_user.name) %></h1>
        <%= form_with model: @user, url: mypage_path, method: :patch, class: 'pt-5', local: true do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label t('.password_confirmation') %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label t('.child_age') %>
            <%= f.select :child_age, [0, 1, 2, 3, 4, 5], class: 'form-control' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label t('.child_sex') %>
            <%= f.select :child_sex, ["男の子", "女の子"], class: 'form-control' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label t('.child_personality') %>
            <%= f.select :child_personality, ["活発", "大人しい"], class: 'form-control' %>
          </div>
          <div class="form-group mt-3">
            <%= f.label t('.child_trend') %>
            <%= f.select :child_trend,["ボール遊び","かけっこ","読書"], class: 'form-control' %>
          </div>
          <div class="actions mt-3">
            <%= f.submit t('.update'), class: 'btn btn-primary' %>
          </div>
        <% end %>
        <div class='text-center mt-5'>
          <div class='mt-1'>
            <%= link_to t('.back'), mypage_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
